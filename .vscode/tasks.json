{
    "label": "CUDA C/C++: BUILD Debug",
    "type": "shell",
    "command": "nvcc",
    "args": [
        "--allow-unsupported-compiler",
        "-g",
        "-G",
        "-ccbin", "g++",
        "-m64",
        "-gencode", "arch=compute_86,code=sm_86",
        "${file}",
        "-I${workspaceFolder}/Common",
        "-o", "${fileDirname}/debug/${fileBasenameNoExtension}"
    ],
    "group": { "kind": "build", "isDefault": true }
},
{
    "label": "CUDA C/C++: BUILD Release",
    "type": "shell",
    "command": "nvcc",
    "args": [
        "--allow-unsupported-compiler",
        "-O3",
        "-ccbin", "g++",
        "-m64",
        "-gencode", "arch=compute_86,code=sm_86",
        "${file}",
        "-I${workspaceFolder}/Common",
        "-o", "${fileDirname}/release/${fileBasenameNoExtension}"
    ],
    "group": { "kind": "build" }
}
