    "version": "0.2.0",
    "configurations": [
    {
        "name": "CUDA C/C++: build and debug active file",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "setupCommands": [
            {
            "description": "Enable pretty-printing for gdb",
